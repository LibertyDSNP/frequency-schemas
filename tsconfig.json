{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "esModuleInterop": true,
      "lib": ["ES2022"],
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": false,
      "strict": true,
      "skipLibCheck": true,
      "target": "es2022",
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "ts-node": {
      "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules/**", "./test/**", "./scripts/**", "**/*.test.ts", "**/*.spec.ts", "./dist/**"]
}
